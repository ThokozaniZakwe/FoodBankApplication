@model List<Candidate>

<div class="mb-3">
    @if (Model.Count > 0)
    {
        <button id="print" class="btn btn-info text-white float-end" onclick="printJS('candidatesPrint', 'html')">Print <i class="fa-solid fa-print"></i></button>
        <button id="printExcel" class="btn btn-info text-white float-end me-3">Export to Excel <i class="fa-solid fa-download"></i></button>
    }
</div>

<div class="col-lg-12 col-xl-12 d-flex align-items-stretch shadow-lg">
    <div class="card w-100">
        <div class="card-body p-4">
            <h5 class="card-title fw-semibold mb-4">Recent Transactions</h5>
            <div class="table-responsive">
                <table class="table text-nowrap mb-0 align-middle" id="candidatesPrint">
                    <thead class="text-dark fs-4 bg-secondary">
                        <tr>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Name</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Surname</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Street Addres</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">City</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Province</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Gender</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">DOB</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Highest School Grade</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Municipality</h6>
                            </th>
                            <th class="border-bottom-0">
                                <h6 class="fw-semibold mb-0">Status</h6>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var candidate in Model)
                        {
                            <tr style="cursor:pointer" id="@candidate.Id" class="dataRow">
                                <td class="border-bottom-0">
                                    <h6 class="fw-semibold mb-1">@candidate.Name</h6>
                                </td>
                                <td class="border-bottom-0">
                                    <p class="mb-0 fw-semibold">@candidate.Surname</p>
                                </td>
                                <td class="border-bottom-0">
                                    <div class="d-flex align-items-center gap-2">
                                        <span class="badge bg-success rounded-3 fw-semibold">@candidate.AddressLine1</span>
                                    </div>
                                </td>
                                <td class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0 fs-4">@candidate.City.Description</h6>
                                </td>
                                <td class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0 fs-4">@candidate.Province.Description</h6>
                                </td>
                                <td class="border-bottom-0">
                                    <div class="d-flex align-items-center gap-2">
                                        <span class="badge bg-primary rounded-3 fw-semibold">@candidate.Gender</span>
                                    </div>
                                </td>
                                <td class="border-bottom-0">
                                    <h6 class="fw-semibold mb-0 fs-4">@(((DateTime)candidate.DOB).ToString("dd-MMM-yyyy"))</h6>
                                </td>
                                <td class="border-bottom-0">
                                    <h6 class="fw-semibold text-center mb-0 fs-4">@candidate.HighSchoolGrade.Description</h6>
                                </td>
                                <td class="border-bottom-0">
                                    <h6 class="fw-semibold text-center mb-0 fs-4">@candidate?.Municipality?.Description</h6>
                                </td>
                                <td class="border-bottom-0">
                                    <div class="d-flex align-items-center gap-2">
                                        <span class="badge bg-warning rounded-3 fw-semibold">@candidate.Status.Description</span>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

