@model string

<div class="card">
    <div class="card-body" style="width:40rem;">
        <h5 class="card-title">Reset Password</h5>
        <form asp-action="ForgotPassword">            
            <div class="d-flex input-group mb-2">
                <div class="form-floating">
                    <input class="form-control" name="emailAddress" placeholder="Email Address" />
                    <label for="emailAddress">Email Address</label>
                </div>
                <button class="btn btn-primary" asp-action="ForgotPassword">Submit</button>
            </div>
            @if(ViewContext.ModelState.ErrorCount > 0){
                <div class="alert alert-danger text-danger" asp-validation-summary="All"></div>
            }            
        </form>
    </div>
</div>