@model List<User>
<ul class="nav nav-tabs mt-2">
    <li class="nav-item">
        <a class="nav-link active" asp-action="Index">All Users <i class="fa-solid fa-users"></i></a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-action="Register">Add User <i class="fa-solid fa-user-plus"></i></a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-action="Edit">Edit User <i class="fa-solid fa-user-pen"></i></a>
    </li>
    <li class="nav-item">
        <a class="nav-link" asp-action="Delete">Delete User <i class="fa-solid fa-trash-alt"></i></a>
    </li>
</ul>

<div class="card">
    <div class="card-body p-0">
        @if (Model.Count  > 0)
        {
            <table class="table table-info table-striped">
                <thead>
                    <tr class="text-center">
                        <th>FullName</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Last Login</th>
                        <th>Created Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (User user in Model)
                    {
                        <tr class="text-center">
                            <td class="text-dark">@user.FullName</td>
                            <td class="text-dark"> @user.Email</td>
                            <td class="text-dark">@((ViewData["Roles"] as List<Role>).FirstOrDefault(x => x.Id == user.RoleId).Description)</td>
                            <td class="text-dark"> @(user?.lastLogin == null ? "Never" : user.lastLogin) </td>
                            <td class="text-dark">@user.DateCreated</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
                <div class="card-body">
                    <p class="display-3 text-center text-warning">No Users Found</p>
                </div>
        }
    </div>
</div>
